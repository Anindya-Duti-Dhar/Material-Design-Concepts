<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#a5d3e0">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginTop="05dp"
        android:layout_marginLeft="05dp"
        android:id="@+id/cardViewDiscover"
        android:scaleType="centerCrop"
        android:layout_width="170dp"
        android:layout_height="160dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="8dp">

        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

       <!--     <ImageView
                android:src="@drawable/me"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="35dp"
                android:id="@+id/imageDiscover"/>-->

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="27dp"
                android:id="@+id/imageDiscover"
                android:src="@drawable/navbg"
                app:border_color="#FF000000"/>

            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="KUAKATA"
                android:id="@+id/name1"
                android:textColor="#000000"
                android:layout_marginLeft="40dp"
                android:gravity="center_horizontal"
                android:layout_below="@+id/imageDiscover"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200 Km From You"
                android:textSize="11sp"
                android:id="@+id/descriptionDiscover"
                android:layout_marginLeft="26dp"
                android:layout_below="@+id/name1"
                android:gravity="center_horizontal" />

            <View
                android:id="@+id/viewDiscover"
                android:layout_width="130dp"
                android:layout_height="1dip"
                android:layout_marginLeft="3dp"
                android:background="#9c9c9c"
                android:layout_below="@+id/descriptionDiscover"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click to More"
                android:textSize="11sp"
                android:id="@+id/descriptionDiscover1"
                android:layout_marginLeft="35dp"
                android:layout_below="@+id/viewDiscover"
                android:gravity="center_horizontal" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:layout_toRightOf="@+id/cardViewDiscover"
        android:layout_marginTop="05dp"
        android:layout_marginLeft="05dp"
        android:id="@+id/cardViewDiscover1"
        android:scaleType="centerCrop"
        android:layout_width="175dp"
        android:layout_height="160dp"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="8dp">

        <RelativeLayout
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!--     <ImageView
                     android:src="@drawable/me"
                     android:layout_width="80dp"
                     android:layout_height="80dp"
                     android:scaleType="centerCrop"
                     android:layout_marginTop="12dp"
                     android:layout_marginLeft="35dp"
                     android:id="@+id/imageDiscover"/>-->

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="27dp"
                android:id="@+id/imageDiscover1"
                android:src="@drawable/navbg"
                app:border_color="#FF000000"/>

            <TextView
                android:layout_marginTop="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="KUAKATA"
                android:id="@+id/name2"
                android:textColor="#000000"
                android:layout_marginLeft="40dp"
                android:gravity="center_horizontal"
                android:layout_below="@+id/imageDiscover1"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="200 Km From You"
                android:textSize="11sp"
                android:id="@+id/descriptionDiscover3"
                android:layout_marginLeft="26dp"
                android:layout_below="@+id/name2"
                android:gravity="center_horizontal" />

            <View
                android:id="@+id/viewDiscover2"
                android:layout_width="130dp"
                android:layout_height="1dip"
                android:layout_marginLeft="3dp"
                android:background="#9c9c9c"
                android:layout_below="@+id/descriptionDiscover3"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click to More"
                android:textSize="11sp"
                android:id="@+id/descriptionDiscover2"
                android:layout_marginLeft="35dp"
                android:layout_below="@+id/viewDiscover2"
                android:gravity="center_horizontal" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>